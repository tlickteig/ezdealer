@using DataObjects
@model DataObjects.Repair

<h2>@ViewBag.Title</h2>

<div>
    <h4>Repair Information</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Description
        </dt>

        <dd>
            @Html.DisplayFor(model => model.RepairDescription)
        </dd>

        <dt>
            Employee Name
        </dt>

        <dd>
            @ViewBag.EmployeeName
        </dd>

        <dt>
            Customer Name
        </dt>

        <dd>
            @ViewBag.CustomerName
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.VIN)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.VIN)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Date)
        </dt>

        <dd>
            @Model.Date.ToShortDateString()
        </dd>

    </dl>
</div>

<div>
    <h4>Repair Line Items</h4>
    <table class="table">
        <tr>
            <th>
                Serial Number
            </th>        
            <th>
                Amount
            </th>        
            <th>
                Part Type
            </th>
        </tr>
        @foreach (RepairLineItem lineItem in Model.LineItems)
        {
            <tr>
                <td>
                    @lineItem.SerialNumber
                </td>
                <td>
                    @lineItem.Amount
                </td>
                <td>
                    @lineItem.Type
                </td>
            </tr>
        }
    </table>
</div>

<p>
    @Html.ActionLink("Back to List", "Index")
</p>
