@model IEnumerable<DataObjects.BillVM>

<h2>@ViewBag.Title</h2>

<table class="table">
    <tr>        
        <th>
            Customer Name
        </th>
        <th>
            Amount Due
        </th>
        <th>
            Amount Paid
        </th>
        <th>
            Issue Date
        </th>
        <th>
            Due Date
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @item.CustomerName
        </td>
        <td>
            @item.AmountDue.ToString("c")
        </td>
        <td>
            @item.AmountPaid.ToString("c")
        </td>
        <td>
            @item.IssueDate.ToShortDateString()
        </td>
        <td>
            @item.DueDate.ToShortDateString()
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id=item.BillingID })
        </td>
    </tr>
}

</table>
