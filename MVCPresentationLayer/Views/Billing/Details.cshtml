@model DataObjects.Bill

<h2>@ViewBag.Title</h2>

<div>    
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Billing ID
        </dt>

        <dd>
            @Html.DisplayFor(model => model.BillingID)
        </dd>

        <dt>
            Customer ID
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CustomerID)
        </dd>

        <dt>
            Customer Name
        </dt>

        <dd>
            @ViewBag.CustomerName
        </dd>

        <dt>
            Amount Due
        </dt>

        <dd>
            @Model.AmountDue.ToString("c")
        </dd>

        <dt>
            Amount Paid
        </dt>

        <dd>
            @Model.AmountPaid.ToString("c")
        </dd>

        <dt>
            Issue Date
        </dt>

        <dd>
            @Model.IssueDate.ToShortDateString()
        </dd>

        <dt>
            Due Date
        </dt>

        <dd>
            @Model.DueDate.ToShortDateString()
        </dd>

    </dl>
</div>
<p>    
    @Html.ActionLink("Back to List", "Index")
</p>
